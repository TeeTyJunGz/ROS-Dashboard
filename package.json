{
  "name": "ros2-dashboard",
  "version": "1.0.0",
  "description": "ROS2 Dashboard with drag-and-drop widgets and Foxglove Bridge integration",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "mock:bridge": "node src/websocket/mock-foxglove.js",
    "server": "node server.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run server\"",
    "dev:fleet": "concurrently \"npm run dev\" \"npm run mock:bridge\" \"npm run server\""
  },
  "dependencies": {
    "@react-three/drei": "^9.88.13",
    "@react-three/fiber": "^8.15.11",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "lucide-react": "^0.294.0",
    "multer": "^1.4.5-lts.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.6",
    "react-grid-layout": "^1.4.4",
    "react-resizable": "^3.0.5",
    "react-router-dom": "^7.13.0",
    "recharts": "^2.10.3",
    "roslib": "^1.3.0",
    "three": "^0.158.0",
    "uuid": "^13.0.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "vite": "^5.0.8"
  }
}
